<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kuncms.thumbnail.dao.ThumbnailDao" >

    <select id="queryThumbnail"  parameterType="com.kuncms.thumbnail.model.Thumbnail"  resultType="com.kuncms.thumbnail.model.Thumbnail">
        SELECT*FROM thumbnail u where 1=1 
         <if test="coverid != null and coverid !=''" >
        	and u.coverid=#{coverid}
      	</if>
     </select>
    
    <insert id="insert"  parameterType="com.kuncms.thumbnail.model.Thumbnail">
		insert into thumbnail(id,coverid,thumbnailid,flag,create_time,createby,update_time,updateby) values(#{id},#{coverid},#{thumbnailid},#{flag},#{create_time},#{createby},#{update_time},#{updateby})
 	</insert>
  

</mapper>